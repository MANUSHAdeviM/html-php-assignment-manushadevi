<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Drink Deal Checker</title>
  <style>
    body { font-family: Arial, sans-serif; max-width: 640px; margin: 40px auto; padding: 0 16px; }
    label { display:block; margin-top:12px; }
    input[type="number"] { width:120px; padding:6px; margin-left:8px; }
    button { margin-top:14px; padding:8px 12px; font-size:1rem; }
    #result { margin-top:18px; padding:12px; border-radius:8px; background:#f4f4f4; }
  </style>
</head>
<body>
  <h1>Which Drink Saves Money?</h1>
  <p>Enter cost and size for each drink (defaults are the values given) and click <strong>Check Deal</strong>.</p>

  <form id="dealForm" onsubmit="event.preventDefault(); deal();">
    <fieldset>
      <legend><strong>Drink A</strong></legend>
      <label>
        Cost (₹):
        <input id="costA" type="number" step="0.01" min="0" value="25" required>
      </label>
      <label>
        Size (units):
        <input id="sizeA" type="number" step="0.01" min="0.0001" value="11" required>
      </label>
    </fieldset>

    <fieldset>
      <legend><strong>Drink B</strong></legend>
      <label>
        Cost (₹):
        <input id="costB" type="number" step="0.01" min="0" value="23" required>
      </label>
      <label>
        Size (units):
        <input id="sizeB" type="number" step="0.01" min="0.0001" value="9" required>
      </label>
    </fieldset>

    <button type="submit">Check Deal</button>
  </form>

  <div id="result" aria-live="polite"></div>

  <script>
    function deal() {
      // Read values from the form
      const costA = parseFloat(document.getElementById('costA').value);
      const sizeA = parseFloat(document.getElementById('sizeA').value);
      const costB = parseFloat(document.getElementById('costB').value);
      const sizeB = parseFloat(document.getElementById('sizeB').value);

      // Basic validation
      if (!isFinite(costA) || !isFinite(sizeA) || sizeA <= 0 ||
          !isFinite(costB) || !isFinite(sizeB) || sizeB <= 0) {
        document.getElementById('result').textContent = 'Please enter valid positive numbers for all fields.';
        return;
      }

      // Compute cost per unit
      const cpuA = costA / sizeA;
      const cpuB = costB / sizeB;

      // Prepare result text
      let message = `Cost per unit — Drink A: ₹${cpuA.toFixed(2)}; Drink B: ₹${cpuB.toFixed(2)}.\n\n`;

      if (cpuA < cpuB) {
        message += 'Recommendation: Choose Drink A to save money (lower cost per unit).';
      } else if (cpuB < cpuA) {
        message += 'Recommendation: Choose Drink B to save money (lower cost per unit).';
      } else {
        message += 'Both drinks cost the same per unit. Either choice is fine.';
      }

      // Display result
      // Keep newlines by converting to <br>
      document.getElementById('result').innerHTML = message.replace(/\n/g, '<br>');
    }

    // Run once on load to show default calculation
    window.addEventListener('DOMContentLoaded', deal);
  </script>
</body>
</html>
