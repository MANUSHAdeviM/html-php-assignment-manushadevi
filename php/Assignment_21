<?php
function isLeapYear($year) {
    // Leap year if divisible by 4 and (not divisible by 100 or divisible by 400)
    if (($year % 4 == 0 && $year % 100 != 0) || ($year % 400 == 0)) {
        return true;
    } else {
        return false;
    }
}
$year = 2024;
if (isLeapYear($year)) {
    echo "$year is a leap year.";
} else {
    echo "$year is not a leap year.";
}
?>


output:
2024 is a leap year.
